{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "NES Emulator",
            "type": "shell",
            "windows": {
                "command": "..\\fceux\\fceux.exe ${workspaceRoot}\\lesson1\\lesson1.nes"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "taskName": "NES Compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "windows": {
                "command": "cd ${workspaceRoot}\\lesson1; make clean; make"
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}